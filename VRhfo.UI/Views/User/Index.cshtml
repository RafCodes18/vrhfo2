<style>
    #sidebar{
        background: none;
    }
    .black-nav{
        background: #000;
    }
    /* Smooth scrollbar */
    ::-webkit-scrollbar {
        width: 8px;
    }

    ::-webkit-scrollbar-track {
        background: var(--background-color);
    }

    ::-webkit-scrollbar-thumb {
        background: var(--primary-color);
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: var(--join-now-hover);
        }
    .badge.not-achieved {
        filter: grayscale(100%) brightness(0.5);
        opacity: 0.5;
        cursor: not-allowed;
        position: relative;
    }
    .header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

        .header h1 {
            font-size: 3em;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #00ffff, #0080ff, #8000ff, #ff00ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: titleGlow 3s ease-in-out infinite alternate;
            text-shadow: 0 0 30px rgba(0, 255, 255, 0.5);
        }

        .header p {
            color: #00ccff;
            font-size: 1.2em;
            opacity: 0.9;
            animation: subtitlePulse 2s ease-in-out infinite alternate;
        }

    .badges-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
         margin-top: 20px;
    }

    .badge-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        transform: scale(.01rem);
    }

    .badge-container {
        position: relative;
        width: 100px;
        height: 100px;
        margin-bottom: 20px;
    }

    .badge {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }
 
    /* 1 Minute Badge - Basic */
    .badge-1min {
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        box-shadow: 0 0 20px rgba(15, 52, 96, 0.4);
    }

    /* 3 Hour Badge - Bronze tier with warmer tones */
    .badge-3hour {
        background: linear-gradient(135deg, #2d1b0e 0%, #3a2317 25%, #4a2d1a 50%, #5c3a20 75%, #6b4423 100%);
        box-shadow: 0 0 35px rgba(139, 69, 19, 0.8);
        animation: bronzeGlow 3s ease-in-out infinite alternate;
    }

        .badge-3hour .watch-time-label {
            color: #ffd700;
            text-shadow: 0 0 12px rgba(255, 215, 0, 0.9);
        }

    /* 6 Hour Badge - Silver tier with cooler silver tones */
    .badge-6hour {
        background: linear-gradient(135deg, #2c2c2c 0%, #3a3a3a 20%, #4a4a4a 40%, #5a5a5a 60%, #6a6a6a 80%, #7a7a7a 100%);
        box-shadow: 0 0 45px rgba(192, 192, 192, 0.8);
        animation: silverPulse 2.5s ease-in-out infinite alternate;
    }

        .badge-6hour .watch-time-label {
            color: #e6e6e6;
            text-shadow: 0 0 12px rgba(230, 230, 230, 0.9);
        }

        .badge-6hour::after {
            content: '';
            position: absolute;
            top: 5px;
            left: 5px;
            right: 5px;
            bottom: 5px;
            border-radius: 50%;
            background: linear-gradient(45deg, transparent, rgba(192, 192, 192, 0.3), transparent);
            animation: silverShimmer 4s linear infinite;
        }

    /* 9 Hour Badge - Gold tier */
    .badge-9hour {
        background: linear-gradient(135deg, #2d3748 0%, #1a365d 15%, #2c5282 30%, #3182ce 45%, #2c5282 60%, #1a365d 75%, #2d3748 90%, #19376d 100%);
        box-shadow: 0 0 50px rgba(49, 130, 206, 0.8);
        animation: goldRadiance 2s ease-in-out infinite alternate;
    }

        .badge-9hour::after {
            content: '';
            position: absolute;
            top: 3px;
            left: 3px;
            right: 3px;
            bottom: 3px;
            border-radius: 50%;
            background: conic-gradient(from 0deg, transparent, rgba(49, 130, 206, 0.4), transparent, rgba(49, 130, 206, 0.2), transparent);
            animation: goldSpin 6s linear infinite;
        }

    /* 24 Hour Badge - Platinum tier */
    .badge-24hour {
        background: linear-gradient(135deg, #1a365d 0%, #2c5282 10%, #3182ce 20%, #4299e1 30%, #63b3ed 40%, #4299e1 50%, #3182ce 60%, #2c5282 70%, #1a365d 80%, #2d3748 90%, #1a365d 100%);
        box-shadow: 0 0 60px rgba(66, 153, 225, 0.9), 0 0 100px rgba(99, 179, 237, 0.5);
        animation: platinumAura 1.8s ease-in-out infinite alternate;
    }

        .badge-24hour::after {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            right: 2px;
            bottom: 2px;
            border-radius: 50%;
            background: conic-gradient(from 0deg, rgba(66, 153, 225, 0.6), rgba(99, 179, 237, 0.3), rgba(66, 153, 225, 0.6), rgba(99, 179, 237, 0.8), rgba(66, 153, 225, 0.6));
            animation: platinumWhirl 4s linear infinite;
        }

        .badge-24hour::before {
            content: '';
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            border-radius: 50%;
            background: linear-gradient(45deg, transparent, rgba(99, 179, 237, 0.4), transparent);
            animation: platinumRing 3s ease-in-out infinite alternate;
        }

    /* 1 Week Badge - Diamond/Rainbow tier */
    .badge-1week {
        background: linear-gradient(135deg, #000428 0%, #004e92 8%, #009ffd 16%, #00d4ff 24%, #5de0e6 32%, #004e92 40%, #8000ff 48%, #d946ef 56%, #f97316 64%, #eab308 72%, #22c55e 80%, #06b6d4 88%, #6366f1 96%, #000428 100%);
        box-shadow: 0 0 40px rgba(0, 212, 255, 0.8), 0 0 80px rgba(157, 23, 77, 0.6), 0 0 120px rgba(234, 179, 8, 0.4), 0 0 160px rgba(34, 197, 94, 0.3);
        animation: diamondMajesty 1.5s ease-in-out infinite alternate;
    }

        .badge-1week::after {
            content: '';
            position: absolute;
            top: 1px;
            left: 1px;
            right: 1px;
            bottom: 1px;
            border-radius: 50%;
            background: conic-gradient(from 0deg, rgba(0, 212, 255, 0.8), rgba(157, 23, 77, 0.6), rgba(234, 179, 8, 0.7), rgba(34, 197, 94, 0.6), rgba(99, 102, 241, 0.8), rgba(0, 212, 255, 0.8));
            animation: diamondPrism 3s linear infinite;
        }

        .badge-1week::before {
            content: '';
            position: absolute;
            top: -8px;
            left: -8px;
            right: -8px;
            bottom: -8px;
            border-radius: 50%;
            background: conic-gradient(from 0deg, transparent, rgba(0, 212, 255, 0.6), transparent, rgba(157, 23, 77, 0.4), transparent, rgba(234, 179, 8, 0.5), transparent, rgba(34, 197, 94, 0.4), transparent);
            animation: diamondHalo 2s ease-in-out infinite alternate;
        }

