        <div class="watch-history">
            <h2 class="section-header">Watch History</h2>
            @if (Model.VideosWatchedToday.Count == 0)
            {
                <p style="color: var(--accent-color)">Nothing to show</p>
            }
            @foreach(var item in Model.VideosWatchedToday)
            {
                <div class="history-item">
                    <div class="history-thumbnail"><img height="40" width="30" src="@item.ThumbnailUrl" /></div>
                    <div class="history-info">
                        <div class="history-title">@item.Title</div>
                        <div class="history-duration">@item.FormattedDuration</div>
                    </div>
                    <div class="history-time">2 hours ago</div>
                </div>
            }
            <p style="color: var(--primary-color)">Past week</p>             
            @if (Model.VideosWatchedPastWeek.Count == 0)
            {
                <p style="color: var(--accent-color)">Nothing to show</p>
            }
            @foreach (var item in Model.VideosWatchedPastWeek)
            {                        
                <a asp-action="Watch" asp-controller="Video" asp-route-title="@item.Title">
                <div class="history-item">
                    <div class="history-thumbnail"><img height="40" width="50"src="@item.ThumbnailUrl" /></div>
                    <div class="history-info">
                        <div class="history-title">@item.Title</div>
                        <div class="history-duration">@item.FormattedDuration</div>
                    </div>
                    <div class="history-time">1 week ago</div>
                </div>
                </a>
            }
            <p style="color: var(--primary-color)">All previous</p>
            @if (Model.RestOfVideosWatched.Count == 0)
            {
                <p style="color: var(--accent-color)">Nothing to show</p>
            }
            @foreach (var item in Model.RestOfVideosWatched)
            {
                <div class="history-item">
                    <div class="history-thumbnail"><img height="40" width="30" src="@item.ThumbnailUrl" /></div>
                    <div class="history-info">
                        <div class="history-title">@item.Title</div>
                        <div class="history-duration">@item.FormattedDuration</div>
                    </div>
                    <div class="history-time">3 weeks ago</div>
                </div>
            }
